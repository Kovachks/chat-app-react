    "react-router-dom": "^4.2.2",
    "react-router-native": "^4.2.0",
    "react-scripts": "^1.0.14",
    "socket.io": "~1.3.3"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.12.1"
  }
}
